cat >> .gitignore <<'EOF'

# Node / frontend
**/node_modules/
**/dist/
**/build/
**/.next/
**/.cache/
**/.npm/
**/.yarn/
**/coverage/

# Env / secrets
**/.env
**/.env.*
!**/.env.example

# Logs
**/*.log
**/npm-debug.log*
**/yarn-debug.log*
**/yarn-error.log*

# OS / Editor
.DS_Store
Thumbs.db
.vscode/
.idea/

# Docker / compose runtime
**/.docker/
**/docker-compose.override.yml

# Kubernetes local artifacts
**/.kube/
**/*.pem
**/*.key

# Terraform (if any)
**/.terraform/
**/*.tfstate
**/*.tfstate.*
**/crash.log

# Python (if any)
**/__pycache__/
**/*.pyc
**/.pytest_cache/
**/.venv/
EOF